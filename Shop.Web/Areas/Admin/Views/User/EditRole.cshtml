@model Shop.Domain.ViewModels.Admin.Account.CreateOrEditRoleViewModel
@{
    ViewData["Title"] = "ویرایش نقش";
    //var permissions = ViewData["Permissions"] as List<Permission>;
    var permissions = (List<Permission>)ViewData["Permissions"];  //two types of cast
}

<form asp-area="Admin" asp-controller="User" asp-action="EditRole" method="post">
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="card-text">ویرایش اطلاعات</p>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label class="form-label">نام نقش</label>
                        <input class="form-control" asp-for="RoleTitle">
                        <span asp-validation-for="RoleTitle" class="text-danger"></span>
                    </div>


                    <div class="mt-5">
                        <button type="submit" class="btn btn-warning btn-block">ویرایش اطلاعات</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="card-text">سطح دسترسی ها</p>
                    @if (permissions != null && permissions.Any())
                    {
                        @foreach (var permission in permissions.Where(c => c.ParentId == null))
                        {
                            var isPermissionSelected = Model.SelectedPermissions.Any(s => s == permission.Id);
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" @(isPermissionSelected ? "checked" : "") name="@nameof(Model.SelectedPermissions)" value="@permission.Id" />
                                    <span class="text">@permission.Title</span>
                                </label>
                            </div>

                            @foreach (var subPermission in permissions.Where(c => c.ParentId == permission.Id))
                            {
                                var isSubPermissionSelected = Model.SelectedPermissions.Any(s => s == subPermission.Id);
                                <div class="checkbox mr-3" style="margin-right: 17px">
                                    <label>
                                        <input type="checkbox" @(isSubPermissionSelected ? "checked" : "") name="@nameof(Model.SelectedPermissions)" value="@subPermission.Id" />
                                        <span class="text">@subPermission.Title</span>
                                    </label>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScripts" />
}

