@using Shop.Application.Utils
@using Shop.Domain.ViewModels.Site.Products
@model Shop.Domain.ViewModels.Site.Products.ProductDetailViewModel
@{
    ViewData["Title"] = Model.Name;
    var relatedProduct =(List<ProductItemViewModel>) TempData["relatedProduct"];
}

@section scripts
{
    <script src="/js/jquery.elevateZoom.min.js"></script>
    <script src="/js/bootstrap-input-spinner.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
}
<nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
    <div class="container d-flex align-items-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">خانه</a></li>
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Products">محصولات</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
        <!-- End .pager-nav -->
    </div><!-- End .container -->
</nav><!-- End .breadcrumb-nav -->

<div class="page-content">
    <div class="container">
        <div class="product-details-top">
            <div class="row">
                <div class="col-md-6">
                    <div class="product-gallery product-gallery-vertical">
                        <div class="row">
                            <figure class="product-main-image">
                                <img id="product-zoom" alt="@Model.Name" src="@(PathExtensions.ProductOrgin+Model.ProductImageName)"
                                     data-zoom-image="@(PathExtensions.ProductOrgin+Model.ProductImageName)"
                                     alt="تصویر محصول">

                                <a href="#" id="btn-product-gallery" class="btn-product-gallery">
                                    <i class="icon-arrows"></i>
                                </a>
                            </figure><!-- End .product-main-image -->

                            <div id="product-zoom-gallery" class="product-image-gallery">

                                @if (Model.ProductImages != null && Model.ProductImageName.Any())
                                {
                                    @foreach (var image in Model.ProductImages)
                                    {
                                        <a class="product-gallery-item active" href="#"
                                           data-image="@(PathExtensions.ProductOrgin+image)"
                                           data-zoom-image="@(PathExtensions.ProductOrgin+image)">
                                            <img src="@(PathExtensions.ProductOrgin+image)"
                                                 alt="@Model.Name">
                                        </a>

                                    }
                                }

                            </div><!-- End .product-image-gallery -->
                        </div><!-- End .row -->
                    </div><!-- End .product-gallery -->
                </div><!-- End .col-md-6 -->

                <div class="col-md-6">
                    <div class="product-details">
                        <h1 class="product-title">@Model.Name</h1>
                        <!-- End .product-title -->

                        <div class="ratings-container">
                            <div class="ratings">
                                <div class="ratings-val" style="width: 80%;"></div><!-- End .ratings-val -->
                            </div><!-- End .ratings -->
                            <a class="ratings-text" href="#product-review-link" id="review-link">
                                ( @Model.ProductComment نظر
                                )
                            </a>
                        </div><!-- End .rating-container -->

                        <div class="product-price">
                            @Model.Price.ToString("#,0 تومان")
                        </div><!-- End .product-price -->

                        <div class="product-content">
                            <p>
                                @Model.ShortDescription
                            </p>
                        </div><!-- End .product-content -->
                        <!-- End .details-filter-row -->
                        <!-- End .details-filter-row -->
                        <!-- End .details-filter-row -->

                        <div class="product-details-action">
                            <a asp-area="" asp-controller="Product" asp-action="BuyProduct" asp-route-productId="@Model.ProductId" class="btn-product btn-cart"><span>افزودن به سبد خرید</span></a>

                            <div class="details-action-wrapper">
                                <a asp-area="User" asp-controller="Account" asp-action="AddUserFavorite" asp-route-productId="@Model.ProductId" class="btn-product btn-wishlist"
                                   title="لیست علاقه مندی">
                                    <span>
                                        افزودن
                                        به
                                        علاقه مندی
                                    </span>
                                </a>
                                <a asp-area="User" asp-controller="Account" asp-action="AddUserCompare" asp-route-productId="@Model.ProductId" class="btn-product btn-compare" title="مقایسه">
                                    <span>
                                        افزودن به
                                        لیست مقایسه
                                    </span>
                                </a>
                            </div><!-- End .details-action-wrapper -->
                        </div><!-- End .product-details-action -->

                        <div class="product-details-footer">
                            <div class="product-cat text-center">
                                <span>دسته بندی : </span>
                                <a asp-area="" asp-controller="Product" asp-action="Products" asp-route-FilterByCategory="@Model.ProductCategory.UrlName">@Model.ProductCategory.Title</a>
                            </div><!-- End .product-cat -->

                            <div class="social-icons social-icons-sm">
                                <span class="social-label">اشتراک گذاری : </span>
                                <a href="#" class="social-icon" title="فیسبوک" target="_blank">
                                    <i class="icon-facebook-f"></i>
                                </a>
                                <a href="#" class="social-icon" title="توییتر" target="_blank">
                                    <i class="icon-twitter"></i>
                                </a>
                                <a href="#" class="social-icon" title="اینستاگرام" target="_blank">
                                    <i class="icon-instagram"></i>
                                </a>
                            </div>
                        </div><!-- End .product-details-footer -->
                    </div><!-- End .product-details -->
                </div><!-- End .col-md-6 -->
            </div><!-- End .row -->
        </div><!-- End .product-details-top -->

        <div class="product-details-tab">
            <ul class="nav nav-pills justify-content-center" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="product-desc-link" data-toggle="tab"
                       href="#product-desc-tab" role="tab" aria-controls="product-desc-tab"
                       aria-selected="true">توضیحات</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="product-info-link" data-toggle="tab" href="#product-info-tab"
                       role="tab" aria-controls="product-info-tab" aria-selected="false">ویژگی های محصول</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="product-review-link" data-toggle="tab"
                       href="#product-review-tab" role="tab" aria-controls="product-review-tab"
                       aria-selected="false">نظرات (@Model.ProductComment)</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="product-desc-tab" role="tabpanel"
                     aria-labelledby="product-desc-link">
                    <div class="product-desc-content">
                        <h3>اطلاعات محصول</h3>
                        @Model.Description
                    </div><!-- End .product-desc-content -->
                </div><!-- .End .tab-pane -->
                <div class="tab-pane fade" id="product-info-tab" role="tabpanel"
                     aria-labelledby="product-info-link">
                    <div class="product-desc-content">
                        <h3>اطلاعات</h3>
                        @if (Model.ProductFeatures != null && Model.ProductFeatures.Any())
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">عنوان ویژگی </th>
                                        <th scope="col">مقدار ویژگی</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var feature in Model.ProductFeatures)
                                    {
                                        <tr>
                                            <td>@feature.FeatureTitle</td>
                                            <td>@feature.FeatureValue</td>
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        }
                    </div><!-- End .product-desc-content -->
                </div><!-- .End .tab-pane -->
                <!-- .End .tab-pane -->
                <div class="tab-pane fade" id="product-review-tab" role="tabpanel" aria-labelledby="product-review-link">
                   @if (User.Identity.IsAuthenticated)
                   {
                       <div class="row">
                           <div class="col-md-12">
                               <form asp-controller="Product" asp-action="CreateProductComment" method="post">
                                   <input type="hidden" value="@Model.ProductId" name="ProductId" />
                                   <label>متن نظر</label>
                                   <textarea name="Text" class="form-control"></textarea>
                                   <button type="submit" class="btn btn-success">ارسال نظر</button>
                               </form>
                           </div>
                       </div>
                   }
                   else
                   {
                       <div class="alert alert-warning">
                           برای درج نظر لطفا لاگین کنید
                       </div>
                   }

                    <div class="reviews">
                        <h3>@Model.ProductComment</h3>
                        <!-- End .review -->
                        @await Component.InvokeAsync("ProductComments",new {productId=Model.ProductId})
                    </div><!-- End .نظر -->
                </div><!-- .End .tab-pane -->
            </div><!-- End .tab-content -->
        </div><!-- End .product-details-tab -->

        <h2 class="title text-center mb-4">محصولاتی که شاید بپسندید</h2><!-- End .title text-center -->

        <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl"data-owl-options='{"nav": false,"dots": true,"margin": 20,
                            "loop": false,
                            "rtl": true,
                            "responsive": {
                                "0": {
                                    "items":1
                                },
                                "480": {
                                    "items":2
                                },
                                "768": {
                                    "items":3
                                },
                                "992": {
                                    "items":4
                                },
                                "1200": {
                                    "items":4,
                                    "nav": true,
                                    "dots": false
                                }
                            }
                        }'>
        @if (relatedProduct != null && relatedProduct.Any())
        {
            foreach (var related in relatedProduct)
            {
            <div class="product product-7 text-center">
                <figure class="product-media">
                    <a asp-area="" asp-controller="Product" asp-action="ProductDetail">
                        <img src="@(PathExtensions.ProductOrgin+related.ProductImageName)" alt="تصویر محصول"
                             class="product-image">
                    </a>

                    <div class="product-action-vertical">
                        <a href="#" class="btn-product-icon btn-wishlist btn-expandable">
                            <span>
                                افزودن به
                                لیست علاقه مندی
                            </span>
                        </a>
                        <a href="popup/quickView.html" class="btn-product-icon btn-quickview"
                           title="مشاهده سریع"><span>مشاهده سریع</span></a>
                        <a href="#" class="btn-product-icon btn-compare" title="مقایسه">
                            <span>
                                لیست
                                مقایسه
                            </span>
                        </a>
                    </div><!-- End .product-action-vertical -->

                    <div class="product-action">
                        <a href="#" class="btn-product btn-cart"><span>افزودن به سبد خرید</span></a>
                    </div><!-- End .product-action -->
                </figure><!-- End .product-media -->

                <div class="product-body">
                    <div class="product-cat text-center">
                        <a asp-area="" asp-controller="Product" asp-action="Products" asp-route-FilterByCategory="@related.ProductCategory.UrlName">@related.ProductCategory.Title</a>
                    </div><!-- End .product-cat -->
                    <h3 class="product-title text-center"><a asp-area="" asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@related.ProductId">@related.ProductName</a></h3>
                    <!-- End .product-title -->
                    <div class="product-price">
                        @related.Price.ToString("#,0 تومان")
                    </div><!-- End .product-price -->
                    <div class="ratings-container">
                        <!-- End .ratings -->
                        <span class="ratings-text">( @related.CommentCount دیدگاه )</span>
                    </div><!-- End .rating-container -->

                    <!-- End .product-nav -->
                </div><!-- End .product-body -->
            </div>
            }
        }

            <!-- End .product -->

           
        </div><!-- End .owl-carousel -->
    </div><!-- End .container -->
</div><!-- End .page-content -->